{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C File",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${workspaceRoot}\\${fileBasenameNoExtension}.c",
                "-o",
                "${workspaceRoot}\\${fileBasenameNoExtension}.exe",
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run C File",
            "type": "shell",
            "command": ".\\${fileBasenameNoExtension}.exe",
        },
        {
            "label": "Build C File",
            "type": "shell",
            "command": "gcc",
            "args": ["-g", "-o", "${workspaceRoot}\\${fileBasenameNoExtension}", "${workspaceRoot}\\${fileBasenameNoExtension}.c"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}